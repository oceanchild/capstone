<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Register &middot; HMS V1.0</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="/assets/bootstrap.css" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
        background: url("/assets/bg.jpg") no-repeat center 0 fixed;
        background-size: cover;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
      }

      hr {
        color: #757171;
        background-color: #757171;
        height: 1px;
      }

      #footer {
        background: url("/assets/greystrips.png") repeat-x;
      }

      .form-signup {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signup .form-signup-heading,
      .form-signup .checkbox {
        margin-bottom: 10px;
      }
      .form-signup input[type="text"],
      .form-signup input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

      /* custom style override */
      .container.signup {
        margin-top: 40px;
      }
      .force-head {
        margin-top: 15px;
      }
      .force-tail {
        margin-bottom: 15px;
      }
      i {
        font-style: normal;
      }
      #usertype-id-select:hover, #usertype-id-select li:hover {
        cursor: pointer;
      }

      #new_user .popover {
        width: 100px;
      }
      #new_user .popover.right .arrow {
        top: 20%;
      }
      #avatar-popover-content {
        width: 72px;
        max-height: 400px;
        overflow: scroll;
      }

      #registration-avatar-selection {
        padding-right: 4px;
      }
      .img-select:hover {
        cursor: pointer;
        border: solid 2px #CCCCCC;
      }
      .img-select.active {
        border: solid 2px #222222;
      }
    </style>
    <link href="/assets/bootstrap-responsive.css" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/apple-touch-icon-114-precomposed.png">
      <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/apple-touch-icon-72-precomposed.png">
                    <link rel="apple-touch-icon-precomposed" href="/assets/apple-touch-icon-57-precomposed.png">
                                   <link rel="shortcut icon" href="/assets/favicon.png">
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand hidden-phone" href="/home">Home Monitoring System V1.0</a>
          <a class="brand visible-phone" href="/home">HMS V1.0</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="active"><a href="/">Home</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div id="signup" class="container signup">
      <%= form_for(@user, :html => {:class => "form-signup"}) do |f| %>
        <h2 id="avatar-popover-trigger" class="form-signup-heading">Register</h2>
        <% if @user.errors.any? %>
        <div class="error_messages">
          <ul>
            <% for message in @user.errors.full_messages %>
              <li class="text-error"><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <%= f.text_field :email, :class => 'input-block-level', :placeholder => 'Email address (Username)', :required => true, :tabindex => '1' %>
        <%= f.password_field :password, :class => 'input-block-level', :placeholder => 'Password', :required => true, :tabindex => '1' %>
        <%= f.password_field :password_confirmation, :class => 'input-block-level', :placeholder => 'Password Confirm', :required => true, :tabindex => '1' %>
        <%= f.text_field :last_name, :class => 'input-block-level', :placeholder => 'Last Name', :required => true, :tabindex => '1' %>
        <%= f.text_field :first_name, :class => 'input-block-level', :placeholder => 'First Name', :required => true, :tabindex => '1' %>
        <%= f.text_field :phone, :class => 'input-block-level', :placeholder => 'Phone Number', :required => true, :tabindex => '1' %>
        <%= f.text_field :address, :class => 'input-block-level', :placeholder => 'Address', :required => true, :tabindex => '1' %>
        <%= f.hidden_field :usertype %>
        <div class="btn-group input-block-level force-tail" id="usertype-id">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#" tabindex="1">
            <i id="usertype-id-text">Choose your role</i>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" id="usertype-id-select">
            <li>
              <a tabindex="-1">Guardian</a>
            </li>
            <li>
              <a tabindex="-1">Care taker</a>
            </li>
            <li>
              <a tabindex="-1">Doctor</a>
            </li>
          </ul>
        </div>
        <%= f.submit 'Register »', :class => 'btn btn-large btn-primary', :id => 'register', :tabindex => '1' %>
        <a href="/login" class="btn btn-large pull-right hidden-phone" tabindex="1">Back to sign in »</a>
        <a href="/login" class="btn btn-large force-head visible-phone" tabindex="1">Back to sign in »</a>
      <% end %>
      <hr>
      <div id="footer">
        <div class="container">
          <p class="muted credit">
            <span class="pull-left">Capstone Group 2 &copy; 2012-2013</span>
            <span class="pull-right">Dillon Dixon | Jing Guo | Pablo Lam | Wendy Li | Chao Lu</span>
          </p>
        </div>
      </div>
    </div> <!-- /container -->
    <div id="avatar-popover-content-container" class="hidden">
      <div id="avatar-popover-content">
        <div class="" id="registration-avatar-selection" style="overflow-x: hidden; overflow-y: auto;">
          <%= hidden_field_tag 'user[avatar]', '/assets/avatars/dp_default.jpg' %>
          <img class="img-select img-rounded" src="/assets/avatars/dp0.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp1.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp2.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp3.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp4.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp5.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp6.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp7.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp8.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp9.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp10.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp11.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp12.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp13.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp14.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp15.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp16.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp17.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp18.jpg" />
          <img class="img-select img-rounded" src="/assets/avatars/dp19.jpg" />
        </div>
      </div>
    </div>

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/assets/jquery.min.js" type="text/javascript"></script>
    <script src="/assets/bootstrap.min.js" type="text/javascript"></script>

    <script type="text/javascript">
      $(document).ready(function() {
        select_msg = "Choose your role";
        $('#usertype-id-text').html(select_msg);
        $('#user_usertype_id').val('');
        $('#usertype-id-select li').click(function() {
          $('#usertype-id-text').html($(this).html());
          $('#user_usertype').val($('a', this).html());
        });
      });

      // popover activation
      $(document).ready(function() {
        $('#avatar-popover-trigger').popover({
          title: '<em>Avatar:</em>',
          html: true,
          content: function() {
            return $('#avatar-popover-content-container').html();
          }
        });

        $('html').click(function() {
          if($('.popover').length==0) {
            // $('#avatar-popover-trigger').popover('show'); // doesn't activate .bind(), problematic
            $('#avatar-popover-trigger').trigger('click');
          } else {
            $('#avatar-popover-trigger').unbind();
          }
        });
      });

      // UI firing actions
      $(document).ready(function() {
        $('#signup').delegate('.img-select', 'hover', function(e) {
          if(e.type==='mouseenter') {
            $(this).removeClass('img-rounded').addClass('img-circle');
          }
          if(e.type==='mouseleave') {
            if (!$(this).hasClass('active')) {
              $(this).removeClass('img-circle').addClass('img-rounded');
            }
          }
        });
        $('#signup').delegate('.img-select', 'click', function() {
          $('.img-circle.active').removeClass('img-circle active').addClass('img-rounded');
          $(this).addClass('img-circle active');
          $('#user_avatar').val($(this).attr('src'));
        });
      });
    </script>

  </body>
</html>
